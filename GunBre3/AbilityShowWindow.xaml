<Window x:Class="GunBre3.AbilityShowWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GunBre3"
        mc:Ignorable="d"
        Title="AbilityShowWindow" Height="850" Width="900" Left="0" Top="0">
    <Grid>
        <ComboBox x:Name="type" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="type_SelectionChanged"/>
        <TextBlock x:Name="abiname" HorizontalAlignment="Left" Margin="20,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="380" Height="740"/>
        <TextBlock x:Name="abival" HorizontalAlignment="Left" Margin="480,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="380" Height="740"/>
    </Grid>
</Window>
